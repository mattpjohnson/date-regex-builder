{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "target": "es2016",
        "lib": [
            "es2015",
            "es2016",
            "es2017.sharedmemory"
        ],
        "module": "umd",
        "moduleResolution": "node",
        "baseUrl": "src",
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
